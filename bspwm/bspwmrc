#! /bin/sh

# If picom is running, kill it to prevent multiple instances
#if ps -A | grep picom; then
#	killall -q picom
#fi

# If sxhkd is running, kill it to prevent multiple instances
if ps -A | grep sxhkd; then
	killall -q sxhkd
fi

# If polybar is running, kill it to prevent multiple instances
if ps -A | grep polybar; then
        killall -q polybar
fi

# If spotifyd is running, kill it to prevent multiple instances
if ps -A | grep spotifyd; then
        killall -q spotifyd
fi


# User programs
# Polybar
bash $HOME/.config/polybar/launch.sh -l=trace

# Spotifyd
spotifyd

# Background
feh --bg-center $HOME/.config/wallpaper.png

# Transparancy
#picom --experimental-backends --daemon

# Sxhkd
pgrep -x sxhkd > /dev/null || sxhkd &

# Screens
bspc monitor -d I II III IV V VI VII VIII IX X

# Window configuration
bspc config border_width                 1
bspc config window_gap                   20
bspc config active_border_color         \#96a0b0
bspc config normal_border_color         \#96a0b0
bspc config focused_border_color        \#96a0b0
bspc config pointer_motion_interval      50ms

# BSPWM misc config
bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config top_padding		 58 # Polybar gap

# Apps
#bspc rule -a Gimp desktop='^8' state=floating follow=on
#bspc rule -a Chromium desktop='^2'
#bspc rule -a mplayer2 state=floating
#bspc rule -a Kupfer.py focus=on
#bspc rule -a Screenkey manage=off
